#cart_content
	#cart.popover.fade.bottom.in
		div.arrow(style='left:50%')
		table
			if session.cart.items.length
				each val, index in session.cart.items
					tr
						td: strong.item_name #{(val.name.length>13)?val.name.substring(0,13)+'..':val.name}
						td: span.item_price $ #{val.price}
						td: strong.por x
						td: input.item_qty(value='#{val.qty}')
						td.td_close: a.item_close.alert-danger.text-center(
						href='/cart/remove_item?item='+val._id
						id='#{index}'
						) X
				table
					tr 
						td.text-right
							p: strong Total:&nbsp
						td.text-left
							- var price = session.cart.total.toFixed(2).toString()
							p.item_price #{price}
			else
				tr
					td: p.text-center Carro vacio.